<%- include("partials/header") %>

<h1>Home</h1>
<p><%= homeContent %></p>

<form  action="/newPost" method="post">
  <button class="btn btn-primary composebutton" type="submit" name="button">Compose</button>
</form>

<% if(postArray.length){ %>
  <h1 class="entryhead">My Entries</h1>
<% } %>


<% for(let i = 0; i< postArray.length; i++){ %>
  <h1 class = "title"><%= postArray[i].title %></h1>
  <h1><%= postArray[i].name %></h1>
  <p class="dateClass"><%= postArray[i].currdate %></p>
  <% if(postArray[i].content.length <= 100 ){ %>
    <p><%= postArray[i].content %></p>
  <% }else{ %>
    <p><%= postArray[i].content.substr(0, 100) + "..." %>
      <a class="readmore" href="/entries/<%= postArray[i].title %>">Read More</a>
    </p>
    <br>
  <% } %>

<%}; %>

<%- include("partials/footer") %>
